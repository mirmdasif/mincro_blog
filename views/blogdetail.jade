html
head
    title title
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(href='/css/bootstrap.css', rel='stylesheet', type='text/css')
    link(href='/css/bootstrap-responsive.css', rel='slylesheet', type='text/css')
    link(href='/css/style.css', rel='stylesheet', type='text/css')
    script(type='text/javascript', src='js/jquery-1.7.2.js')
    script(type='text/javascript', src='js/bootstrap.js')
  body.container-fluid
    .navbar.navbar-inverse
      .navbar-inner
        a.brand(href='/blog') Blog
        ul.nav
          li
            a(href='/') Home
          li
            a(href='/blog/new') New Post  
    .row-fluid
      .span2
      .span8
        .row-fluid
          .span12
            .page-header
              h1 #{article.title}
            ul.thumbnails
              li.span12
                .thumbnail
                  p #{article.body}
                      
        .row-fluid
          .span11.offset1
            .media              
            each comment in article.comments
              h4.media-heading #{comment.person} 
                small Wrote That 
              
              p #{comment.comment}
            .row-fluid
              .span12
                form( method="post", action="/blog/addComment")
                  input( type="hidden", name="_id", value=article._id.toHexString())
                  fieldset
                    legend Post Your Comment
                    input(type='text',name="person", placeholder='Write Your Name')
                    br
                    textarea(name="comment",rows='6',placeholder='Write Your Comment')
                    br
                    button.btn(type='submit') Submit
      .span2
